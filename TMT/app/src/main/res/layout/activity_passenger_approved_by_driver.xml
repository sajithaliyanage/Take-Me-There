<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_passenger_request_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#323232"
    tools:context="com.example.sajitha.tmt.PassengerApprovedByDriverActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RatingBar
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:progressTint="#ffca28"
            android:progressBackgroundTint="#ffc107"
            android:numStars="5"
            android:rating="0"
            android:id="@+id/ratingBar"
            android:isIndicator="false"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="52"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:textColor="#76FF03"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="42sp" />

            <TextView
                android:text="2"
                android:textStyle="normal|bold"
                android:textColor="#FF1744"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="42sp" />

            <TextView
                android:text="952"
                android:textStyle="normal|bold"
                android:textColor="#18FFFF"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="42sp" />
        </LinearLayout>

        <LinearLayout
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Commends"
                android:textStyle="normal|bold"
                android:textColor="#76FF03"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="16sp" />

            <TextView
                android:text="Reports"
                android:textStyle="normal|bold"
                android:textColor="#FF1744"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="16sp" />

            <TextView
                android:text="Tours"
                android:textColor="#18FFFF"
                android:textStyle="normal|bold"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:paddingStart="10dp"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent">

                <TextView
                    android:text="Name"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp" />

                <TextView
                    android:text="Gender"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp" />

                <TextView
                    android:text="Passenger Level"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp" />

                <TextView
                    android:text="Ratings"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp" />

                <TextView
                    android:text="Smoker"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp" />

                <TextView
                    android:text="Alchoholic"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp" />





            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:paddingEnd="10dp"
                android:gravity="end"
                android:orientation="vertical"
                android:layout_weight="3"
                android:layout_height="match_parent">

                <TextView
                    android:textColor="#fff"
                    android:id="@+id/name"
                    android:text="Sulochan Kodituwakku"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="normal|bold"
                    android:textSize="14dp" />

                <TextView
                    android:textColor="#fff"
                    android:id="@+id/gender"
                    android:text="Male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="normal|bold"
                    android:textSize="14dp" />

                <TextView
                    android:textColor="#fff"
                    android:id="@+id/passenger_level"
                    android:text="Level 15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="normal|bold"
                    android:textSize="14dp" />

                <TextView
                    android:textColor="#fff"
                    android:id="@+id/ratings"
                    android:text="4.75"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="normal|bold"
                    android:textSize="14dp" />

                <TextView
                    android:textColor="#fff"
                    android:id="@+id/smoker"
                    android:text="False"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="normal|bold"
                    android:textSize="14dp" />

                <TextView
                    android:textColor="#fff"
                    android:id="@+id/alchoholic"
                    android:text="False"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="normal|bold"
                    android:textSize="14dp" />



            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:paddingTop="25dp"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:textColor="#ffd700"
            android:textStyle="bold"
            android:textSize="24sp"
            android:text="Journey Details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:paddingLeft="10dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="12.3 km"
                        android:textStyle="normal|bold"
                        android:textAlignment="center"
                        android:textColor="#ffd700"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="42sp" />

                    <TextView
                        android:text="DISTANCE"
                        android:textStyle="normal|bold"
                        android:textColor="#ffd700"
                        android:textAllCaps="true"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp" />

                </LinearLayout>




            </LinearLayout>

            <LinearLayout
                android:gravity="end"
                android:orientation="vertical"
                android:paddingRight="10dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="01"
                        android:textStyle="normal|bold"
                        android:textAlignment="center"
                        android:textColor="#ffd700"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="42sp" />

                    <TextView
                        android:text="SEATS REQUIRED"
                        android:textStyle="normal|bold"
                        android:textColor="#ffd700"
                        android:textAllCaps="true"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp" />



                </LinearLayout>




            </LinearLayout>






        </LinearLayout>

    </LinearLayout>


    <TextView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:background="#76FF03"
            android:id="@+id/accept"
            android:text="Accept"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <Button
            android:text="Reject"
              android:id="@+id/reject"
            android:background="#FF5722"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
