<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_passenger_journey_review"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FFD700"
    android:orientation="vertical"
    tools:context="com.teamwhileloop.my_uis.PassengerJourneyReview">

    <TextView
        android:textColor="#000"
        android:text="Review Your Journey"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:background="#00000000"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/img_option_commend"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:id="@+id/report"
            android:background="#00000000"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/img_option_report"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Commend"
            android:textStyle="normal|bold"
            android:textColor="#55b900"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="16sp" />

        <TextView
            android:text="Report"
            android:textStyle="normal|bold"
            android:textColor="#FF1744"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:text="Rate your journey with this driver on a scale of 1 to 5"
        android:textAllCaps="false"
        android:paddingTop="10dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#ff0000"
        android:id="@+id/ratingBar"
        android:numStars="5"
        android:rating="4.2"
        android:isIndicator="false"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <TextView
        android:textAlignment="center"
        android:textSize="12sp"
        android:paddingBottom="15dp"
        android:text="Always provide truthful information when submitting a report. This information will be used to help other TMT users to evade annoying people in order to have a secure and joyfull journey"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/over"
        android:background="#212121"
        android:textColor="#FFD700"
        android:text="Submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
