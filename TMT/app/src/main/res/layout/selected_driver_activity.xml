<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_vehicle_description"
    android:background="#323232"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.sajitha.tmt.AddRemoveVehicle">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="92dp"
            android:layout_height="92dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageView"
            android:layout_alignParentTop="true"
             />

        <ImageView
            android:layout_marginRight="10dp"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:srcCompat="@android:drawable/ic_menu_myplaces"
            android:id="@+id/imageView2"
            android:layout_below="@+id/driverName"
            android:layout_toRightOf="@+id/imageView" />

        <TextView
            android:text="Level 12 TMT Driver"
            android:textColor="#FFD700"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/driver_level"
            android:layout_below="@+id/driverName"
            android:layout_toEndOf="@+id/imageView2"
            android:textAlignment="center"
            android:textAllCaps="true" />

        <TextView
            android:text="12 commends"
            android:textColor="#76FF03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/commends"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:layout_alignBottom="@+id/imageView2"
            android:layout_alignStart="@+id/driver_level"
            android:textSize="14sp"
            android:textStyle="normal|bold" />


        <TextView
            android:text="2 Reports"
            android:textColor="#ff0000"
            android:textAllCaps="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:id="@+id/textView2"
            android:layout_alignBottom="@+id/commends"
            android:layout_toEndOf="@+id/commends"
            android:layout_alignTop="@+id/commends"
            android:textStyle="normal|bold" />

        <TextView
            android:paddingTop="10dp"
            android:text="Hello"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/driverName"
            android:textSize="30sp"
            android:textStyle="normal|bold"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageView"
            android:layout_toEndOf="@+id/imageView" />

    </RelativeLayout>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#ff0000"
        android:id="@+id/ratingBar"
        android:progressTint="#ffca28"
        android:progressBackgroundTint="#ffc107"
        android:numStars="5"
        android:rating="0"
        android:foregroundTint="#fff"
        android:isIndicator="false"
        android:layout_height="wrap_content" />

    <TextView
        android:text="124 Ratings"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp" />

    <LinearLayout
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:text="Name"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp" />

            <TextView
                android:text="Gender"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Availability"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp" />

            <TextView
                android:text="Total Seats"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp" />

            <TextView
                android:text="Available Seats"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp" />

            <TextView
                android:text="Vehicle Maker"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp" />

            <TextView
                android:text="Vehicle Model"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp" />

            <TextView
                android:text="Vehicle Number"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp" />

            <TextView
                android:text="Vehicle Type"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp" />



            <TextView
                android:text="Air Conditioner"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp" />





        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:orientation="vertical"
            android:gravity="end"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#FFD700"
                android:id="@+id/name"
                android:text="Sulochan Kodituwakku"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal|bold"
                android:textSize="18sp" />

            <TextView
                android:textColor="#FFD700"
                android:textStyle="normal|bold"
                android:text="Male"
                android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="#FFD700"
                android:textStyle="normal|bold"
                android:text="Available"
                android:id="@+id/availability"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp" />

            <TextView
                android:textColor="#FFD700"
                android:textStyle="normal|bold"
                android:text="5"
                android:id="@+id/total_seats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp" />

            <TextView
                android:textColor="#FFD700"
                android:textStyle="normal|bold"
                android:text="2"
                android:id="@+id/available_seats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp" />

            <TextView
                android:textColor="#FFD700"
                android:textStyle="normal|bold"
                android:text="Mercedes Benz"
                android:id="@+id/vehicle_maker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp" />

            <TextView
                android:textColor="#FFD700"
                android:textStyle="normal|bold"
                android:text="E300"
                android:id="@+id/vehicle_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp" />

            <TextView
                android:textColor="#FFD700"
                android:textStyle="normal|bold"
                android:text="SP AEU 5565"
                android:id="@+id/vehicle_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp" />

            <TextView
                android:textColor="#FFD700"
                android:textStyle="normal|bold"
                android:id="@+id/vehicle_type"
                android:text="SUV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp" />



            <TextView
                android:textColor="#FFD700"
                android:textStyle="normal|bold"
                android:text="Available"
                android:id="@+id/ac_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="TAKE ME WITH YOU"
        android:id="@+id/makeRequest"
        android:background="#ffd700"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:clickable="true"
        android:onClick="confirmDestination"

        />

</LinearLayout>
